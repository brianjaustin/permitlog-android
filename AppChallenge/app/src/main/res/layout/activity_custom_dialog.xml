<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_driver_dialog"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:theme="@style/Theme.AppTheme.Light.NoActionBar"
    tools:context="team.tr.permitlog.DriverDialog"
    android:orientation="vertical">
    <android.support.v7.widget.Toolbar
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/my_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        android:elevation="4dp"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
        android:layout_gravity="top"
        app:titleTextColor="@android:color/white"
        android:label="Custom Drive"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginEnd="15dp"
        android:layout_marginStart="15dp">
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pick the date that you drove on."
            android:textAllCaps="false"
            android:onClick="pickDate" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/drive_date"
            android:text="No date chosen."
            android:textSize="20sp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pick the time when you started driving."
            android:textAllCaps="false"
            android:onClick="pickStartTime" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/drive_start_time"
            android:text="No time chosen."
            android:textSize="20sp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pick the time when you stopped driving."
            android:textAllCaps="false"
            android:onClick="pickEndTime" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/drive_end_time"
            android:text="No time chosen."
            android:textSize="20sp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Note that if the ending time is before the starting time, it will be assumed that the drive went into the next day." />
        <CheckBox
            android:id="@+id/drive_at_night_checkbox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="This drive was at night."
            android:textSize="20sp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="What driver accompanied you?"
            android:textSize="20sp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp" />
        <Spinner
            android:id="@+id/drivers_spinner"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"/>
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|right"
            android:paddingTop="5dp">
            <Button
                style="@style/Widget.AppCompat.Button.Colored"
                android:text="OK"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/custom_drive_ok"
                android:onClick="onSaveClick"
                android:textAppearance="@style/TextAppearance.AppCompat.Widget.Button.Colored"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true" />
            <Button
                style="@style/Widget.AppCompat.Button.Colored"
                android:text="Cancel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="onCancel"
                android:textAppearance="@style/TextAppearance.AppCompat.Widget.Button.Colored"
                android:layout_alignParentTop="true"
                android:layout_toStartOf="@+id/custom_drive_ok" />
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>
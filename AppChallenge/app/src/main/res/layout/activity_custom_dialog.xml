<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_driver_dialog"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:theme="@style/Theme.AppTheme.Light.NoActionBar"
    tools:context="team.tr.permitlog.DriverDialog"
    android:orientation="vertical">
    <android.support.v7.widget.Toolbar
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/my_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        android:elevation="4dp"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
        android:layout_gravity="top"
        app:titleTextColor="@android:color/white"
        android:label="Custom Drive"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginEnd="15dp"
        android:layout_marginStart="15dp">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                style="@style/Base.TextAppearance.AppCompat.Headline"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Date: "
                android:textSize="20sp"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:id="@+id/drive_date_text"
                android:layout_centerVertical="true"/>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pick the date that you drove on."
                android:id="@+id/drive_date"
                android:textAllCaps="false"
                android:onClick="pickDate"
                android:layout_toEndOf="@+id/drive_date_text"
                style="@style/Widget.AppCompat.Spinner.Underlined"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                style="@style/Base.TextAppearance.AppCompat.Headline"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Start Time: "
                android:id="@+id/drive_start_time_text"
                android:textSize="20sp"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:layout_centerVertical="true"/>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pick the time when you started driving."
                android:id="@+id/drive_start_time"
                android:textAllCaps="false"
                android:onClick="pickStartTime"
                android:layout_toEndOf="@+id/drive_start_time_text"
                style="@style/Widget.AppCompat.Spinner.Underlined"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                style="@style/Base.TextAppearance.AppCompat.Headline"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Stop Time: "
                android:id="@+id/drive_end_time_text"
                android:textSize="20sp"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:layout_centerVertical="true"/>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pick the time when you stopped driving."
                android:id="@+id/drive_end_time"
                android:textAllCaps="false"
                android:onClick="pickEndTime"
                android:layout_toEndOf="@+id/drive_end_time_text"
                style="@style/Widget.AppCompat.Spinner.Underlined"/>
        </RelativeLayout>
        <CheckBox
            android:id="@+id/drive_at_night_checkbox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="This drive was at night."
            android:textSize="20sp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp" />
        <TextView
            style="@style/Base.TextAppearance.AppCompat.Headline"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Accompanying Driver:"
            android:textSize="20sp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp" />
        <Spinner
            android:id="@+id/drivers_spinner"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"/>
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|right"
            android:paddingTop="5dp">
            <Button
                style="@style/Widget.AppCompat.Button.Colored"
                android:text="OK"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/custom_drive_ok"
                android:onClick="onSaveClick"
                android:textAppearance="@style/TextAppearance.AppCompat.Widget.Button.Colored"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true" />
            <Button
                style="@style/Widget.AppCompat.Button.Colored"
                android:text="Cancel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="onCancel"
                android:textAppearance="@style/TextAppearance.AppCompat.Widget.Button.Colored"
                android:layout_alignParentTop="true"
                android:layout_toStartOf="@+id/custom_drive_ok" />
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>